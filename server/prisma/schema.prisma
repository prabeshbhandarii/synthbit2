generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Certificate {
  id                 Int      @id @default(autoincrement())
  name               String
  code               String   @unique
  courseName         String
  courseStartDate    DateTime
  courseCompletionDate DateTime
  filePath           String
  createdAt          DateTime @default(now())
}